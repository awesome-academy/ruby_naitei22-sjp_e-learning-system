<% provide :title, t("devise.sessions.log_in") %>
<% content_for :breadcrumbs do %>
  <%= link_to content_tag(:i, "", class: "fas fa-home"), root_path %>
  <span class="breadcrumb-separator"> > </span>
  <%= link_to t("devise.sessions.log_in"), new_user_session_path %>
<% end %>

<h1><%= t("devise.sessions.log_in") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.sessions.log_in"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center my-4">
      <span class="text-muted">— <%= t(".or") %> —</span>
    </div>

    <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "google-btn" do %>
      <img src="<%= Settings.google_logo_url %>">
      <span><%= t("devise.sessions.continue_with_google") %></span>
    <% end %>

  </div>
</div>
