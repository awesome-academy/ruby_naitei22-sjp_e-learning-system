<% content_for :title, t(".title") %>

<div class="admin-user-courses">
  <div class="form-container">
    <div class="page-header">
      <h1><%= t(".title") %></h1>
      <% content_for :breadcrumbs do %>
        <%= link_to content_tag(:i, "", class: "fas fa-home"), root_path %>
        <span class="breadcrumb-separator"> > </span>
        <%= link_to t("admin.user_courses.index.title"), admin_user_courses_path %>
      <% end %>
    </div>

    <!-- Filter Section -->
    <div class="filter-section mb-4">
      <%= form_with url: admin_user_courses_path, method: :get, local: true, class: "filter-form" do |form| %>
        <div class="filter-row">
          <div class="filter-group">
            <%= form.label :course, t(".filters.course"), class: "filter-label" %>
            <%= form.select :course, options_for_select(course_filter_options, params[:course]),
                           {}, { class: "form-select" } %>
          </div>

          <div class="filter-group">
            <%= form.label :status, t(".filters.status"), class: "filter-label" %>
            <%= form.select :status, options_for_select(status_filter_options, params[:status]),
                           {}, { class: "form-select" } %>
          </div>
        </div>

        <div class="filter-row">
          <div class="filter-group">
            <%= form.label :registered_from, t(".filters.registered_from"), class: "filter-label" %>
            <%= form.date_field :registered_from, value: params[:registered_from],
                               placeholder: t(".filters.placeholders.registered_from"), class: "form-control" %>
          </div>

          <div class="filter-group">
            <%= form.label :expiration_date, t(".filters.expiration_date"), class: "filter-label" %>
            <%= form.date_field :expiration_date, value: params[:expiration_date],
                               placeholder: t(".filters.placeholders.expiration_date"), class: "form-control" %>
          </div>
        </div>

        <div class="filter-actions">
          <%= form.submit t(".filters.filter_button"), class: "btn btn-primary" %>
          <%= link_to t(".filters.clear_button"), admin_user_courses_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>

    <!-- Bulk Actions Form -->
    <%= form_with url: approve_selected_admin_user_courses_path, method: :post, local: true, class: "bulk-actions-form" do %>
      <div class="user-courses-table">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="checkbox-column">
                  <input type="checkbox" id="select_all" class="form-check-input">
                </th>
                <th><%= t(".table.headers.name") %></th>
                <th><%= t(".table.headers.course") %></th>
                <th><%= t(".table.headers.status") %></th>
                <th><%= t(".table.headers.register_on") %></th>
                <th><%= t(".table.headers.action") %></th>
              </tr>
            </thead>
            <tbody>
              <% @user_courses.each do |uc| %>
                <tr>
                  <td class="text-center">
                    <%= check_box_tag "user_course_ids[]", uc.id, false,
                                      class: "form-check-input user-course-checkbox" %>
                  </td>
                  <td><%= uc.user.name %></td>
                  <td><%= uc.course.title %></td>
                  <td>
                    <%= status_badge(uc.enrolment_status) %>
                  </td>
                  <td><%= uc.created_at.strftime(Settings.user_courses.date_format) %></td>
                  <td class="action-column">
                    <% if uc.pending? %>
                      <%= link_to t(".table.actions.approve"), approve_admin_user_course_path(uc),
                                  method: :patch,
                                  class: "btn btn-sm btn-success action-btn",
                                  data: {
                                    turbo_confirm: t(".table.confirmations.approve"),
                                    turbo_method: :patch
                                  } %>
                      <%= link_to t(".table.actions.reject"),
                                  reject_form_admin_user_course_path(uc),
                                  class: "btn btn-sm btn-danger action-btn",
                                  data: { modal: true, turbo: false } %>
                    <% elsif uc.rejected? %>
                      <%= link_to t(".table.actions.view_reason"),
                        reject_detail_admin_user_course_path(uc),
                        data: { modal: true, turbo: false },
                        class: "btn btn-sm btn-secondary action-btn" %>
                    <% else %>
                      <%= link_to t(".table.actions.view_profile"), profile_admin_user_course_path(uc),
                                  class: "btn btn-sm btn-primary action-btn" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Bulk Action Buttons -->
      <div class="bulk-actions">
        <%= submit_tag t(".bulk_actions.approve_all"),
                       formaction: approve_selected_admin_user_courses_path,
                       class: "btn btn-success bulk-btn",
                       id: "approve_all_btn",
                       data: {
                         turbo_confirm: t(".bulk_actions.confirmations.approve_all"),
                         approve_all_msg: t(".bulk_actions.confirmations.approve_all"),
                         no_selection_msg: t(".bulk_actions.confirmations.no_selection")
                       } %>
        <%= submit_tag t(".bulk_actions.reject_all"),
                       formaction: reject_selected_admin_user_courses_path,
                       class: "btn btn-danger bulk-btn",
                       id: "reject_all_btn",
                       data: {
                         turbo_confirm: t(".bulk_actions.confirmations.reject_all"),
                         reject_all_msg: t(".bulk_actions.confirmations.reject_all"),
                         no_selection_msg: t(".bulk_actions.confirmations.no_selection")
                       } %>
      </div>
    <% end %>

    <!-- Pagination -->
    <div>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
