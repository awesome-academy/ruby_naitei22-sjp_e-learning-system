<div class="row">
  <div class="col-md-8">
    <div class="word-page-header">
      <h2><i class="fa fa-book"></i> <%= t(".title") %></h2>
    </div>
  </div>
  <div class="col-md-4 text-right">
    <div class="words-count">
      <p class="text-muted"><%= t(".total") %> <strong><%= @pagy.count %></strong></p>
    </div>
  </div>
</div>

<div class="table-container">
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th><%= t(".word") %></th>
        <th><%= t(".meaning") %></th>
        <th><%= t(".word_type") %></th>
        <th><%= t(".status") %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @words, learned_ids: @learned_ids %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
