<h2><%= t(".title", resource: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t(".email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t(".pending_reconfirmation", email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t(".password") %>
    <i><%= t(".password_hint") %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t(".password_minimum", count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t(".current_password") %>
    <i><%= t(".current_password_hint") %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t(".update") %>
  </div>
<% end %>

<h3><%= t(".cancel_account_title") %></h3>

<div>
  <%= t(".unhappy") %>
  <%= button_to t(".cancel_account"),
        registration_path(resource_name),
        data: { confirm: t(".cancel_account_confirm"), turbo_confirm: t(".cancel_account_confirm") },
        method: :delete %>
</div>

<%= link_to t(".back"), :back %>
