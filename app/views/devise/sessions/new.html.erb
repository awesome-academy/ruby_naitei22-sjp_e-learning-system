<% provide :title, t("sessions.new.log_in") %>
<% content_for :breadcrumbs do %>
  <%= link_to content_tag(:i, "", class: "fas fa-home"), root_path %>
  <span class="breadcrumb-separator"> > </span>
  <%= link_to t("sessions.new.log_in"), new_user_session_path %>
<% end %>
<h1><%= t("sessions.new.log_in") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("sessions.new.remember_me") %></span>
      <% end %>
      <%= f.submit t("sessions.new.log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("sessions.new.new_user?") %><%= link_to t("sessions.new.sign_up_now!"), new_user_registration_path %></p>
    <div class="text-center my-4">
      <span class="text-muted">— <%= t("sessions.new.or") %> —</span>
    </div>
    <%= form_tag("/auth/google_oauth2", method: "post", data: { turbo: false }) do %>
      <button type="submit" class="google-btn">
        <img src="<%= Settings.google_logo_url %>" alt="<%= t("sessions.new.google_logo_alt") %>">
        <span><%= t("sessions.new.continue_with_google") %></span>
      </button>
    <% end %>
  </div>
</div>
