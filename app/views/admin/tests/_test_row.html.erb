<tr>
  <td class="test-name"><%= test.name %></td>
  <td class="test-description"><%= test.description.truncate(50) %></td>
  <td class="test-duration"><%= test.duration %></td>
  <td class="test-attempts"><%= test.max_attempts %></td>
  <td class="test-date"><%= test.created_at.strftime(Settings.course.date_format) %></td>
  <td class="test-actions">
    <%= link_to t(".action_view"), admin_test_path(test), class: "btn btn-sm btn-outline-primary" %>
    <%= link_to t(".action_edit"), edit_admin_test_path(test), class: "btn btn-sm btn-outline-secondary" %>
    <%= link_to t(".action_delete"), admin_test_path(test),
                class: "btn btn-sm btn-outline-danger",
                data: {
                  "turbo-method": :delete,
                  "turbo-confirm": t(".confirm_delete")
                } %>
  </td>
</tr>
