<h1><%= t(".title") %></h1>

<%= form_with(model: @test, url: admin_tests_path, class: "test-form") do |form| %>
  <div class="form-row form-row-top">
    <div class="form-group form-group-name">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group form-group-duration">
      <%= form.label :duration %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>

    <div class="form-group form-group-attempts">
      <%= form.label :max_attempts %>
      <%= form.number_field :max_attempts, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group form-group-description">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control form-textarea" %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit t(".submit_button"), class: "button button-primary" %>
  </div>
<% end %>
