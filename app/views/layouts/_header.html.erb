<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("navbar.brand_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <!-- Admin Navigation -->
            <li><%= link_to t("navbar.manage_course"), admin_courses_path %></li>
            <li><%= link_to t("navbar.manage_test"), "#" %></li>
            <li><%= link_to t("navbar.manage_word"), admin_words_path %></li>
            <li><%= link_to t("navbar.manage_user"), "#" %></li>
          <% else %>
            <!-- Normal User Navigation -->
            <li><%= link_to t("navbar.home"), "#" %></li>
            <li><%= link_to t("navbar.courses"), "#" %></li>
            <li><%= link_to t("navbar.words"), user_words_path %></li>
            <li><%= link_to t("navbar.profile"), "#" %></li>
          <% end %>

          <!-- Account Dropdown (for logged in users) -->
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t("navbar.account") %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("navbar.profile"), "#" %></li>
              <li><%= link_to t("navbar.settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("navbar.log_out"), logout_path, data: {"turbo-method": :delete} %></li>
            </ul>
          </li>

        <% else %>
          <!-- Guest Navigation -->
          <li><%= link_to t("navbar.home"), root_path %></li>
          <li><%= link_to t("navbar.help"), "#" %></li>
          <li><%= link_to t("navbar.contact"), "#" %></li>
          <li><%= link_to t("navbar.microposts"), "#" %></li>
          <li><%= link_to t("navbar.sign_up"), signup_path %></li>
          <li><%= link_to t("navbar.log_in"), login_path %></li>
        <% end %>

        <!-- Language Switch -->
        <li><%= link_to t("languages.en"), url_for(locale: :en) %></li>
        <li><%= link_to t("languages.vi"), url_for(locale: :vi) %></li>
      </ul>
    </nav>
  </div>
</header>
