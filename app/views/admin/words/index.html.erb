<div class="list-page-container">
  <header class="page-header">
    <h1><%= t(".title") %></h1>
    <% content_for :breadcrumbs do %>
      <%= link_to content_tag(:i, "", class: "fas fa-home"), root_path %>
      <span class="breadcrumb-separator"> > </span>
      <span><%= t(".title") %></span>
    <% end %>
    <div class="header-actions">
      <%= form_with url: admin_words_path, method: :get, class: "search-form", data: { turbo_frame: "words-table" } do %>
        <%= text_field_tag :query, params[:query], placeholder: t(".search_placeholder"), class: "search-input" %>
        <%= select_tag :filter_time,
                         options_for_select(filter_time_options, params[:filter_time]),
                         onchange: "this.form.requestSubmit()",
                         class: "search-input" %>
      <% end %>
      <%= link_to t(".new_word_button"), new_admin_word_path, class: "button button-primary" %>
    </div>
  </header>
  <div class="content-panel">
    <table class="data-table">
      <thead class="data-table-header">
        <tr>
          <th><%= t(".table_headers.word") %></th>
          <th><%= t(".table_headers.meaning") %></th>
          <th><%= t(".table_headers.created_at") %></th>
          <th class="column-actions"><%= t(".table_headers.actions") %></th>
        </tr>
      </thead>
      <tbody class="data-table-body">
        <% if @words.any? %>
          <%= render partial: "word", collection: @words, as: :word %>
        <% else %>
          <tr>
            <td colspan="4" class="cell-empty">
              <%= t(".empty_message") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) if @pagy %>
  </div>
</div>
